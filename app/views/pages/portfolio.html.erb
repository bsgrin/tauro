<div style="margin-left: -120px; width: 70px; display: table; height: 400px">
  <div class="vcentered">
    <% @galleries.each do |g| %>
      <p><%= g.name %></p>
    <% end %>
  </div>
</div>

<div class="vcentered">
  <% art = get_gallery_arts( @galleries.first )[4]%>
  <%= image_tag art, :style => "float: left;" %>
  <div style="width: 50px; height: 50px; overflow: hidden;">
    <%= image_tag art, :style => "width: 50px; margin: -10px 0 0 0;" %>
  </div>
</div>